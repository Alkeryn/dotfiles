#!/bin/bash
if xsetwacom --list devices | grep -q WL; then
Eraser=$(xsetwacom --list devices | grep eraser | awk '{print $9}')
Stylus=$(xsetwacom --list devices | grep stylus | awk '{print $9}')
else
Eraser=$(xsetwacom --list devices | grep eraser | awk '{print $8}')
Stylus=$(xsetwacom --list devices | grep stylus | awk '{print $8}')
fi
xsetwacom --set $Stylus MapToOutput 1920x1080+1920+0
xsetwacom --set $Eraser MapToOutput 1920x1080+1920+0
xsetwacom --set $Stylus Area 0 0 31488 17712
xsetwacom --set $Eraser Area 0 0 31488 17712
